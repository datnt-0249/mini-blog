<div class="p-6 mb-5 bg-white border border-gray-200 rounded-3xl shadow">
  <h5 class="mb-5 text-2xl font-semibold tracking-tight text-gray-900">
    <%= post.title %>
  </h5>
  <div class="flex gap-x-5 mb-5">
    <span class="text-gray-400 font-medium">
      <i class="fa-regular fa-user"></i>
      <%= post.user.name %>
    </span>
    <span class="text-gray-400 font-medium">
      <i class="fa-regular fa-calendar"></i>
      <%= time_ago_in_words post.created_at %>
    </span>
  </div>
  <p class="mb-3 text-lg">
    <%= post.content %>
  </p>
  <div class="flex justify-between items-center">
    <div class="flex gap-x-2">
      <%= render partial: "like_button", locals: {post:} %>
      <% if current_user? post.user %>
        <%= link_to edit_post_path(post), class: "py-1 px-2 text-sm cursor-pointer font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-yellow-400" do %>
          <i class="fa-solid fa-pen"></i>
          <span><%= t(".edit") %></span>
        <% end %>
        <%=
          link_to post,
          data: {"turbo-method": :delete, "turbo-confirm": t(".confirm_delete")},
          class: "py-1 px-2 text-sm cursor-pointer font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-yellow-400" do
        %>
          <i class="fa-solid fa-pen"></i>
          <span><%= t(".delete") %></span>
        <% end %>
      <% end %>
    </div>
    <span>
      <%= link_to t(".read_more"), "#", class: "text-blue-500 font-medium" %>
      <i class="fa-solid fa-arrow-right text-blue-500"></i>
    </span>
  </div>
</div>
